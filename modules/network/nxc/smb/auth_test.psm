#!/bin/bash
# NXC SMB Authentication Test Module

MODULE_NAME="network/nxc/smb/auth_test"
MODULE_CATEGORY="network"
MODULE_DESCRIPTION="Test SMB authentication with credentials"
MODULE_AUTHOR="PurpleSploit Team"
MODULE_TOOL="nxc"

REQUIRED_VARS="RHOST,USERNAME"
OPTIONAL_VARS="PASSWORD:,DOMAIN:,HASH:"

COMMAND_TEMPLATE="nxc smb \${RHOST} -u \${USERNAME} -p '\${PASSWORD}' \${DOMAIN:+-d \$DOMAIN} \${HASH:+-H \$HASH}"
